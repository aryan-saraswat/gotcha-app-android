<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorialscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:backgroundTint="#9EFF0000"
    tools:context=".Tutorial">

    <TextView
        android:id="@+id/tut6"
        android:layout_width="232dp"
        android:layout_height="48dp"
        android:layout_marginBottom="52dp"
        android:autoSizeTextType="none"
        android:autoText="true"
        android:bufferType="spannable"
        android:fontFamily="@font/bauhaus"
        android:gravity="center"
        android:text="press to skip"
        android:textAlignment="inherit"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        android:textDirection="inherit"
        android:textSize="27sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tut5"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tut5"
        android:layout_width="370dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="none"
        android:autoText="true"
        android:bufferType="spannable"
        android:fontFamily="@font/bell_mt_fett"
        android:gravity="center"
        android:text="Press the Red button to record!"
        android:textAlignment="inherit"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textDirection="inherit"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tut4"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tut4"
        android:layout_width="370dp"
        android:layout_height="93dp"
        android:layout_marginTop="13dp"
        android:autoSizeTextType="none"
        android:autoText="true"
        android:bufferType="spannable"
        android:fontFamily="@font/bell_mt_fett"
        android:gravity="center"
        android:text="Add your own slang to the dictionary!"
        android:textAlignment="inherit"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textDirection="inherit"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tut3"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tut3"
        android:layout_width="369dp"
        android:layout_height="147dp"
        android:layout_marginTop="4dp"
        android:autoSizeTextType="none"
        android:autoText="true"
        android:bufferType="spannable"
        android:fontFamily="@font/bell_mt_fett"
        android:gravity="center"
        android:text="Let the app count your over the top nasty usage of words!"
        android:textAlignment="inherit"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textDirection="inherit"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tut2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tut1"
        android:layout_width="369dp"
        android:layout_height="57dp"
        android:layout_marginTop="44dp"
        android:autoSizeTextType="none"
        android:autoText="true"
        android:bufferType="spannable"
        android:fontFamily="@font/bell_mt_fett"
        android:gravity="center"
        android:text="Welcome to GOTCHA! "
        android:textAlignment="inherit"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textDirection="inherit"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tut2"
        android:layout_width="369dp"
        android:layout_height="142dp"
        android:layout_marginTop="12dp"
        android:autoSizeTextType="none"
        android:autoText="true"
        android:bufferType="spannable"
        android:fontFamily="@font/bell_mt_fett"
        android:gravity="center"
        android:text="The app uses ur spoken words to recognize swearing!"
        android:textAlignment="inherit"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textDirection="inherit"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tut1"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="390dp"
        android:layout_height="786dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/dict_tut"
        android:layout_width="72dp"
        android:layout_height="67dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tut5"
        app:layout_constraintEnd_toEndOf="@+id/tut4"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dict" />

    <ImageButton
        android:id="@+id/dict_settings"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tut4"
        app:layout_constraintEnd_toEndOf="@+id/tut3"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/settings" />

</androidx.constraintlayout.widget.ConstraintLayout>